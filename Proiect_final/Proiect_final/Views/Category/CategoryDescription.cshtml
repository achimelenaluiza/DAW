@model Proiect_final.Models.Category
@{
    ViewBag.Title = "CategoryDescription";
    var emptyCategoryDescription = "This category has no description";
}

<h2>@ViewBag.Title</h2>

@Html.Label("Name", "Name:")
<br />
<p>@Model.Name</p>

@Html.Label("Description", "Description:")
<br />
<div class="panel-body">
    @if (Model.Description.IsEmpty())
    {
    <p>@emptyCategoryDescription</p>
    }
    else
    {
        @Html.DisplayFor(c => c.Description)
    }
</div>