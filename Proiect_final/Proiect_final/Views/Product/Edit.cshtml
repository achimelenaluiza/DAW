@model  Proiect_final.Models.Product

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Basic Infos of Product</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">

    @Html.HiddenFor(x => x.ProductId)
    <br />
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Price, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <br />

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </div>
</div>
}
